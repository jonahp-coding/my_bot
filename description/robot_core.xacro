<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- COLORS -->

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="transparent_yellow">
        <color rgba="1 1 0 0.6"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.022 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.115 0 0"/>
            <geometry>
                <box size="0.23 0.14 0.04"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin xyz="0.115 0 0"/>
            <geometry>
                <box size="0.23 0.14 0.04"/>
            </geometry>
        </collision>
        
        <xacro:inertial_box mass="0.5" x="0.23" y="0.14" z="0">
            <origin xyz="0.115 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>

    <!-- YELLOW BOX ON TOP -->

    <joint name="yellow_box_on_top_joint" type="fixed">
        <parent link="chassis"/>
        <child link="yellow_box_on_top"/>
    </joint>

    <link name="yellow_box_on_top">
        <visual>
            <origin xyz="0.11 0 0.06"/>
            <geometry>
                <box size="0.075 0.075 0.075"/>
            </geometry>
            <material name="transparent_yellow"/>
        </visual>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name ="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.09 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
        </collision>
        
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name ="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.09 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.045" length="0.04"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.045">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.2 0 -0.0225"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
           <sphere radius="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.1" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>

    </link>

</robot>